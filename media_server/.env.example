# =============================================================================
# Database Configuration (REQUIRED)
# =============================================================================
POSTGRES_DB=media_server
POSTGRES_USER=media_user
POSTGRES_PASSWORD=change_this_password

# Database connection URL for the API
# Format: postgresql://user:password@host:port/database
DATABASE_URL=postgresql://media_user:change_this_password@db:5432/media_server

# =============================================================================
# EPG (Electronic Program Guide) Auto-Sync Settings
# =============================================================================
# Enable/disable automatic EPG synchronization (1=enabled, 0=disabled)
EPG_AUTO_SYNC=1

# How often to sync EPG data (in minutes)
EPG_AUTO_SYNC_MINUTES=60

# Time window for EPG data to fetch (in hours)
EPG_AUTO_SYNC_HOURS=36

# =============================================================================
# TMDB (The Movie Database) Auto-Sync Settings
# =============================================================================
# Enable/disable automatic TMDB synchronization (1=enabled, 0=disabled)
TMDB_AUTO_SYNC=1

# How often to run TMDB sync batches (in minutes)
TMDB_AUTO_SYNC_MINUTES=5

# Number of movies to sync per batch
TMDB_AUTO_SYNC_BATCH_MOVIES=5

# Number of series to sync per batch
TMDB_AUTO_SYNC_BATCH_SERIES=5

# Idle time when no items need syncing (in minutes)
TMDB_AUTO_SYNC_IDLE_MINUTES=30

# =============================================================================
# TMDB Sync Advanced Settings (Optional)
# =============================================================================
# Number of concurrent workers for TMDB sync
# TMDB_SYNC_WORKERS=2

# Requests per second to TMDB API
# TMDB_RPS=5

# Burst limit for TMDB API requests
# TMDB_BURST=10

# Cooldown for items not found in TMDB (in minutes)
# TMDB_COOLDOWN_MISSING=15

# Cooldown for failed sync attempts (in minutes)
# TMDB_COOLDOWN_FAILED=120

# Cooldown for transient errors (network, timeout, etc.) (in minutes)
# TMDB_COOLDOWN_TRANSIENT=15

# Cooldown for invalid items (in days)
# TMDB_COOLDOWN_INVALID_DAYS=7

# How often to re-sync already synced items (in days)
# TMDB_RESYNC_DAYS=14

# =============================================================================
# Collections Auto-Refresh Settings
# =============================================================================
# Enable/disable automatic collections refresh (1=enabled, 0=disabled)
COLLECTIONS_AUTO_REFRESH=1

# How often to refresh collection caches (in minutes)
COLLECTIONS_AUTO_REFRESH_MINUTES=10

# =============================================================================
# VLC Configuration (Optional)
# =============================================================================
# Path to VLC binary (auto-detected if not specified)
# VLC_BIN=/usr/bin/vlc
